# Git aliases
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'

# Kubernetes aliases
alias k='kubectl'
alias kgp='kubectl get pods'
alias kgs='kubectl get services'
alias kgd='kubectl get deployments'
alias kdp='kubectl describe pod'
alias kl='kubectl logs'
alias kpf='kubectl port-forward'

# Runtime paths
export PATH="$HOME/.bun/bin:$PATH"
export PATH="$HOME/.deno/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"

{% if ansible_os_family == "Darwin" %}
# Homebrew
export PATH="/opt/homebrew/bin:$PATH"

# K3s specific for macOS
alias k3s-start='k3d cluster start local-dev'
alias k3s-stop='k3d cluster stop local-dev'
alias k3s-delete='k3d cluster delete local-dev'
{% else %}
# K3s specific for Linux
alias k3s-start='sudo systemctl start k3s'
alias k3s-stop='sudo systemctl stop k3s'
alias k3s-status='sudo systemctl status k3s'
{% endif %}

# Load pyenv if available
if [[ -d "$HOME/.pyenv" ]]; then
  export PATH="$HOME/.pyenv/bin:$PATH"
  eval "$(pyenv init --path)"
  eval "$(pyenv init -)"
fi

# Load nvm if available
if [[ -d "$HOME/.nvm" ]]; then
  export NVM_DIR="$HOME/.nvm"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
fi

# Add these AWS aliases to your existing zshrc.j2 template

# AWS aliases
alias aws-profile='export AWS_PROFILE'
alias aws-whoami='aws sts get-caller-identity'
alias aws-regions='aws ec2 describe-regions --query "Regions[].{Name:RegionName}" --output table'

# LocalStack aliases
alias ls-start='localstack start'
alias ls-stop='localstack stop'
alias ls-status='localstack status'
alias ls-logs='localstack logs'

# AWS Local (for use with LocalStack)
alias awsl='awslocal'
alias s3l='awslocal s3'
alias dynamol='awslocal dynamodb'
alias lambdal='awslocal lambda'

# LocalStack endpoints
export LOCALSTACK_ENDPOINT="http://localhost:4566"

# AWS CDK aliases (if installed)
alias cdk-deploy='cdk deploy'
alias cdk-synth='cdk synth'
alias cdk-diff='cdk diff'
alias cdk-destroy='cdk destroy'